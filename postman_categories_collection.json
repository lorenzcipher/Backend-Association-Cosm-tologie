{
  "info": {
    "name": "Cosmeto API - Categories",
    "description": "API endpoints for managing Categories (GET, POST, PUT, DELETE)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/categories?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["categories"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (optional)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (optional)"
                }
              ]
            },
            "description": "Retrieve all categories with pagination. No authentication required."
          },
          "response": []
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "{{categoryId}}"]
            },
            "description": "Retrieve a specific category by ID. No authentication required."
          },
          "response": []
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "description": "Admin token required"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cosmétologie Avancée\",\n  \"description\": \"Catégorie pour les articles et événements liés à la cosmétologie avancée\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            },
            "description": "Create a new category. Admin authentication required."
          },
          "response": []
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "description": "Admin token required"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cosmétologie Avancée - Mise à jour\",\n  \"description\": \"Description mise à jour de la catégorie\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "{{categoryId}}"]
            },
            "description": "Update an existing category. Admin authentication required."
          },
          "response": []
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "description": "Admin token required"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/categories/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "{{categoryId}}"]
            },
            "description": "Delete a category. Admin authentication required."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string",
      "description": "JWT token for admin user (get it from login endpoint)"
    },
    {
      "key": "categoryId",
      "value": "",
      "type": "string",
      "description": "Category ID (will be set automatically after creating a category)"
    }
  ]
}


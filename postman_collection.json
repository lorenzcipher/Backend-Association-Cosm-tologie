{
  "info": {
    "name": "Cosmeto API - Complete",
    "description": "Complete API endpoints for Cosmeto Association including Authentication, Articles, Events, Media and Admin endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        { "name": "List Articles", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/articles", "host": ["{{baseUrl}}"], "path": ["articles"] } } }
      ]
    },
    {
      "name": "Events",
      "item": [
        { "name": "List Events", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/events", "host": ["{{baseUrl}}"], "path": ["events"] } } },
        { "name": "Get Event", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/events/{{eventId}}", "host": ["{{baseUrl}}"], "path": ["events","{{eventId}}"] } } }
      ]
    },
    {
      "name": "Media",
      "item": [
        { "name": "List Media", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/media", "host": ["{{baseUrl}}"], "path": ["media"] } } }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api" },
    { "key": "token", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "eventId", "value": "" },
    { "key": "articleId", "value": "" }
  ]
}

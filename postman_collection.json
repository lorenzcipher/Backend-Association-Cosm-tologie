{
  "info": {
    "name": "Cosmeto Association API - Full",
    "description": "Complete API endpoints for Cosmeto Association",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"email\": \"user@example.com\",\n\t\"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        {
          "name": "Get Article",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/articles/{{articleId}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "articles", "{{articleId}}"]
            }
          }
        },
        {
          "name": "Update Article",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/articles/{{articleId}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "articles", "{{articleId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"title\": \"Updated Title\",\n\t\"content\": \"Updated content\",\n\t\"isPublished\": true\n}"
            }
          }
        },
        {
          "name": "Delete Article",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/articles/{{articleId}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "articles", "{{articleId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Register for Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/events/{{eventId}}/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "events", "{{eventId}}", "register"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    }
  ]
}